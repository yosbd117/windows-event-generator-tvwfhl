<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- MaterialDesignThemes.Wpf v4.9.0 -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
        <ResourceDictionary Source="../Resources/Styles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- Primary Colors - Material Light Theme -->
    <Color x:Key="Primary100">#BBDEFB</Color>
    <Color x:Key="Primary200">#90CAF9</Color>
    <Color x:Key="Primary500">#2196F3</Color>
    <Color x:Key="Primary700">#1976D2</Color>

    <!-- Background Colors -->
    <Color x:Key="Background.Primary">#FFFFFF</Color>
    <Color x:Key="Background.Secondary">#F5F5F5</Color>
    <Color x:Key="Background.Tertiary">#EEEEEE</Color>
    <Color x:Key="Background.Disabled">#FAFAFA</Color>

    <!-- Text Colors - WCAG 2.1 AA Compliant -->
    <Color x:Key="Text.Primary">#212121</Color>
    <Color x:Key="Text.Secondary">#757575</Color>
    <Color x:Key="Text.Disabled">#9E9E9E</Color>
    <Color x:Key="Text.OnPrimary">#FFFFFF</Color>

    <!-- Semantic Colors -->
    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="Error">#F44336</Color>
    <Color x:Key="Warning">#FF9800</Color>
    <Color x:Key="Info">#2196F3</Color>

    <!-- Border and Divider Colors -->
    <Color x:Key="Border.Default">#E0E0E0</Color>
    <Color x:Key="Border.Focus">#2196F3</Color>

    <!-- High Contrast Colors -->
    <Color x:Key="HighContrast.Background">#FFFFFF</Color>
    <Color x:Key="HighContrast.Foreground">#000000</Color>

    <!-- Background Brushes -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="{StaticResource Background.Primary}" />
    <SolidColorBrush x:Key="SecondaryBackground" Color="{StaticResource Background.Secondary}" />
    <SolidColorBrush x:Key="TertiaryBackground" Color="{StaticResource Background.Tertiary}" />
    <SolidColorBrush x:Key="DisabledBackground" Color="{StaticResource Background.Disabled}" />

    <!-- Text Brushes -->
    <SolidColorBrush x:Key="PrimaryForeground" Color="{StaticResource Text.Primary}" />
    <SolidColorBrush x:Key="SecondaryForeground" Color="{StaticResource Text.Secondary}" />
    <SolidColorBrush x:Key="DisabledForeground" Color="{StaticResource Text.Disabled}" />

    <!-- Accent Brushes -->
    <SolidColorBrush x:Key="AccentColor" Color="{StaticResource Primary500}" />
    <SolidColorBrush x:Key="SuccessColor" Color="{StaticResource Success}" />
    <SolidColorBrush x:Key="ErrorColor" Color="{StaticResource Error}" />
    <SolidColorBrush x:Key="WarningColor" Color="{StaticResource Warning}" />
    <SolidColorBrush x:Key="InfoColor" Color="{StaticResource Info}" />

    <!-- Border Brushes -->
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource Border.Default}" />
    <SolidColorBrush x:Key="FocusBorderBrush" Color="{StaticResource Border.Focus}" />

    <!-- High Contrast Brushes -->
    <SolidColorBrush x:Key="HighContrastBackground" Color="{StaticResource HighContrast.Background}" />
    <SolidColorBrush x:Key="HighContrastForeground" Color="{StaticResource HighContrast.Foreground}" />

    <!-- Overlay and Focus Visual Brushes -->
    <SolidColorBrush x:Key="OverlayBrush" Color="#000000" Opacity="0.3" />
    <SolidColorBrush x:Key="FocusVisualBrush" Color="{StaticResource Primary500}" />

    <!-- Material Design Overrides -->
    <SolidColorBrush x:Key="MaterialDesignBackground" Color="{StaticResource Background.Primary}" />
    <SolidColorBrush x:Key="MaterialDesignPaper" Color="{StaticResource Background.Secondary}" />
    <SolidColorBrush x:Key="MaterialDesignBody" Color="{StaticResource Text.Primary}" />
    <SolidColorBrush x:Key="MaterialDesignBodyLight" Color="{StaticResource Text.Secondary}" />
    <SolidColorBrush x:Key="MaterialDesignColumnHeader" Color="{StaticResource Text.Secondary}" />

    <!-- Accessibility Support -->
    <sys:Double x:Key="MinimumTouchTargetSize">44</sys:Double>
    <sys:Double x:Key="StandardFontSize">14</sys:Double>
    <sys:Double x:Key="LargeFontSize">16</sys:Double>
    <Thickness x:Key="FocusVisualMargin">-2</Thickness>
    <Thickness x:Key="FocusVisualThickness">2</Thickness>

    <!-- High DPI Support -->
    <sys:Double x:Key="StandardDpiScale">1.0</sys:Double>
    <sys:Double x:Key="HighDpiScale">1.5</sys:Double>
    <sys:Double x:Key="UltraHighDpiScale">2.0</sys:Double>

</ResourceDictionary>